    <Grid>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="83" Margin="467,65,0,0" TextWrapping="Wrap" Text="Auction Details" VerticalAlignment="Top" Width="435" FontSize="64"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="410" Margin="369,300,0,0" Stroke="Black" VerticalAlignment="Top" Width="602"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="41" Margin="369,229,0,0" TextWrapping="Wrap" Text="AuctionID" VerticalAlignment="Top" Width="246" FontSize="26.667"/>
        <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Height="28" Margin="403,639,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="246" FontSize="21.333"/>
        <TextBox x:Name="textBox_Copy1" HorizontalAlignment="Left" Height="28" Margin="403,583,0,0" TextWrapping="Wrap" Text="Phone Number" VerticalAlignment="Top" Width="246" FontSize="21.333"/>
        <TextBox x:Name="textBox_Copy2" HorizontalAlignment="Left" Height="28" Margin="403,532,0,0" TextWrapping="Wrap" Text="NonProf Contact" VerticalAlignment="Top" Width="246" FontSize="21.333"/>
