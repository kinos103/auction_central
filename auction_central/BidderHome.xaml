       <!--buttons for show, can delete when we bind to dataset-->
        <Button x:Name="button" Content="Auction 1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,267,0,0" Height="34" FontSize="21.333" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Auction 7" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,501,0,0" Height="34" FontSize="21.333" Click="button_Copy_Click"/>
        <Button x:Name="button_Copy1" Content="Auction 6" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,462,0,0" Height="34" FontSize="21.333" Click="button_Copy1_Click"/>
