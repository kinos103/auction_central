        <Button x:Name="currentBids_button" Content="Current Bids" HorizontalAlignment="Left" Height="68" Margin="734,220,0,0" VerticalAlignment="Top" Width="335" FontSize="32" Click="currentBids_button_Click"/>
        <Button x:Name="auction_List_button" Content="View List of Auctions" HorizontalAlignment="Left" Height="68" Margin="232,220,0,0" VerticalAlignment="Top" Width="335" FontSize="32" Click="auction_List_button_Click" RenderTransformOrigin="-1.347,-0.364"/>

    </Grid>
</Page>
