        <Button x:Name="button_Copy3" Content="Auction 4" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,384,0,0" Height="34" FontSize="21.333" Click="button_Copy3_Click"/>
        <Button x:Name="button_Copy4" Content="Auction 3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,345,0,0" Height="34" FontSize="21.333" Click="button_Copy4_Click"/>
        <Button x:Name="button_Copy5" Content="Auction 2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192" Margin="284,306,0,0" Height="34" FontSize="21.333" Click="button_Copy5_Click"/>
        <Button x:Name="currentBids_button" Content="Current Bids" HorizontalAlignment="Left" Height="50" Margin="945,84,0,0" VerticalAlignment="Top" Width="207" FontSize="21.333" Click="currentBids_button_Click"/>

    </Grid>
</Page>
